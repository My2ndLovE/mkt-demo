# Azure Key Vault (Production Only)
AZURE_KEY_VAULT_URL="https://your-keyvault.vault.azure.net/"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:4280"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Node Environment
NODE_ENV="development"

# Server Port
PORT=3000
