# Database
DATABASE_URL="sqlserver://localhost:1433;database=lottery_sandbox;user=sa;password=YourPassword123;encrypt=true;trustServerCertificate=true"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRATION="15m"
REFRESH_TOKEN_EXPIRATION="7d"

# Application
NODE_ENV="development"
PORT=3000
API_PREFIX="api/v1"

# Azure Functions (for production)
WEBSITE_TIME_ZONE="Asia/Kuala_Lumpur"

# Third-party APIs (optional)
MAGAYO_API_URL="https://api.magayo.com/lottery/results"
MAGAYO_API_KEY=""

# Encryption (for API keys)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Caching
CACHE_TTL=300
CACHE_MAX=100

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
