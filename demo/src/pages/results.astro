---
import Layout from '../layouts/Layout.astro';
import { mockCalendarResults, mockTodayResult } from '../data/mockResults.js';

const currentMonth = '2025-11';
const daysInMonth = 30;
const firstDayOfWeek = 5; // Friday (0 = Sunday, 6 = Saturday)
---

<Layout title="成績" headerTitle="成績" backLink="/">
  <div class="bg-gray-50 min-h-screen pb-6">
    <!-- Today's Results -->
    <div class="bg-gradient-primary p-4 pb-6">
      <div class="card animate-scale-in">
        <div class="flex justify-between items-center mb-4">
          <h3 class="font-bold text-lg">今日開獎</h3>
          <span class="text-sm text-gray-500">{mockTodayResult.date}</span>
        </div>

        <div class="space-y-3">
          {mockTodayResult.results.slice(0, 3).map((result) => (
            <div class="p-3 bg-gradient-to-r from-primary-50 to-blue-50 rounded-lg">
              <div class="flex justify-between items-center">
                <span class="font-bold text-primary-700">{result.fullName} ({result.company})</span>
                <span class="text-2xl font-bold text-primary-900 font-mono">{result.prizes.first}</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Calendar -->
    <div class="p-4">
      <div class="card animate-scale-in" style="animation-delay: 0.1s">
        <!-- Month Header -->
        <div class="flex justify-between items-center mb-4">
          <button class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
          </button>
          <h3 class="font-bold text-lg">2025年11月</h3>
          <button class="p-2 hover:bg-gray-100 rounded-lg transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </button>
        </div>

        <!-- Day Headers -->
        <div class="grid grid-cols-7 gap-1 mb-2">
          {['日', '一', '二', '三', '四', '五', '六'].map(day => (
            <div class="text-center text-sm font-semibold text-gray-600 py-2">{day}</div>
          ))}
        </div>

        <!-- Calendar Grid -->
        <div class="grid grid-cols-7 gap-1">
          <!-- Empty cells for first week -->
          {Array.from({ length: firstDayOfWeek }, (_, i) => (
            <div class="aspect-square"></div>
          ))}

          <!-- Days with results -->
          {Array.from({ length: daysInMonth }, (_, i) => {
            const day = i + 1;
            const dateKey = `${currentMonth.split('-')[0]}-${currentMonth.split('-')[1]}`;
            const result = mockCalendarResults[currentMonth]?.[day];
            const isToday = day === 16;

            return (
              <div class={`aspect-square p-1 rounded-lg transition-all ${
                isToday ? 'bg-primary-600 text-white shadow-lg' :
                result ? 'bg-green-50 hover:bg-green-100' :
                'bg-gray-50'
              }`}>
                <div class="text-xs font-semibold mb-1 text-center">{day}</div>
                {result && (
                  <div class="text-[10px] font-mono text-center leading-tight">
                    <div class={isToday ? 'text-white/90' : 'text-green-700'}>{result.M}</div>
                  </div>
                )}
              </div>
            );
          })}
        </div>

        <!-- Legend -->
        <div class="mt-4 pt-4 border-t border-gray-200 flex gap-4 text-sm">
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-primary-600 rounded"></div>
            <span class="text-gray-600">今天</span>
          </div>
          <div class="flex items-center gap-2">
            <div class="w-4 h-4 bg-green-50 border border-green-200 rounded"></div>
            <span class="text-gray-600">已開獎</span>
          </div>
        </div>
      </div>

      <!-- Performance Summary -->
      <div class="mt-4 card animate-scale-in" style="animation-delay: 0.2s">
        <h3 class="font-bold text-lg mb-4">本月表現</h3>
        <div class="grid grid-cols-3 gap-4 text-center">
          <div>
            <p class="text-sm text-gray-500 mb-1">總投注</p>
            <p class="text-2xl font-bold text-primary-600">23</p>
            <p class="text-xs text-gray-400">筆</p>
          </div>
          <div>
            <p class="text-sm text-gray-500 mb-1">已中獎</p>
            <p class="text-2xl font-bold text-green-600">5</p>
            <p class="text-xs text-gray-400">筆</p>
          </div>
          <div>
            <p class="text-sm text-gray-500 mb-1">中獎率</p>
            <p class="text-2xl font-bold text-accent-600">21.7%</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
